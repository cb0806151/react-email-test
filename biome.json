{
	"$schema": "https://biomejs.dev/schemas/1.7.2/schema.json",
	"formatter": {
		"enabled": true,
		"formatWithErrors": false,
		"ignore": [],
		"attributePosition": "auto",
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineEnding": "crlf",
		"lineWidth": 80
	  },
	  "javascript": {
		"formatter": {
		  "arrowParentheses":"always",
		  "bracketSameLine": false,
		  "bracketSpacing": true,
		  "jsxQuoteStyle": "double",
		  "quoteProperties": "asNeeded",
		  "semicolons": "always",
		  "trailingComma": "all"
		}
	  },
	  "json": {
		"formatter": {
		  "trailingCommas": "none"
		}
	  },
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	}
}
